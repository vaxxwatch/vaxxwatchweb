{
  "name": "vaxxwatchweb",
  "description": "Tracking and highlighting anti-vaxx activity across the globe",
  "scripts": {
    "start": "parcel src/template/index.html -d public -p 80",
    "build": "parcel build src/template/index.html -d public",
    "postbuild": "react-snap",
    "lint": "eslint src --fix",
    "git-pre-commit": "npm run lint -- --fix",
    "git-pre-push": "npm-run-all -p lint build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run git-pre-commit",
      "pre-push": "npm run git-pre-push"
    }
  },
  "reactSnap": {
    "source": "public",
    "inlineCss": true
  },
  "eslintConfig": {
    "extends": "./config/.eslintrc.json"
  },
  "parcelCleanPaths": [
    "public/**"
  ],
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "less": "^3.9.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-clean-easy": "^1.0.2",
    "parcel-plugin-static-files-copy": "^2.0.0",
    "react-snap": "^1.23.0"
  },
  "dependencies": {
    "@sentry/browser": "^4.6.6",
    "config": "^3.1.0",
    "leaflet": "^1.4.0",
    "leaflet.heat": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
